<div class="bs-docs-section w-75 mx-auto my-5 py-5">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1>New Issue</h1>
      </div>
    </div>
  </div>

  <form action="/issue/create" method="post" id="form-issue-create">
    <fieldset class="my-4">
      <div class="form-group row my-4">
        <label for="issueSection"
               class="col-sm-4 col-form-label">Issue Section</label>
        <div class="col-sm-10">
          <input type="text" readonly="" class="form-control-plaintext"
                 name="section" id="issueSection" value="2">
        </div>
      </div>

      <div class="form-group my-4">
        <label for="inputIssueTitle">Issue Title</label>
        <input type="title" class="form-control"
               name="title" id="inputIssueTitle">
      </div>
      <div class="form-group my-4">
        <label for="inputIssueDesc">Brief Description of The Issue</label>
        <textarea type="description" class="form-control"
                  name="description" id="inputIssueDesc" rows="5"></textarea>
      </div>
<!--
      <div class="form-group my-4">
        <label for="inputIssueSection">Issue Section</label>
        <input type="section" class="form-control"
               name="section" id="inputIssueSection">
      </div> -->

      <div class="bs-component my-4">
        <button type="submit" class="btn"
                form="form-issue-create" id="button-create"> CREATE </button>
      </div>
    </fieldset>
  </form>
</div>

